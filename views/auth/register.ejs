<%- include('../partials/head.ejs') %>
<%- include('../partials/navbar.ejs') %>
<main>
    <div class="flex justify-center items-center min-h-screen">
        <div class="w-full max-w-md">
            <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">

                <!-- Formulaire de création de compte -->
                <form id="register-form" action="/register" method="POST" data-parsley-validate>
                    <h2 id="form-title" class="text-2xl font-bold text-center mb-6">Créer un compte</h2>
                    
                    <!-- Message d'erreur -->
                    <% if (errorMessage) { %>
                        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-4" role="alert">
                            <strong class="font-bold">Erreur :</strong>
                            <span class="block sm:inline"><%= errorMessage %></span>
                        </div>
                    <% } %>
                    
                    <div class="mb-5">
                        <label class="block text-sm font-medium text-gray-900" for="fullname" data-parsley-length="[3, 20]" data-parsley-trigger="keyup">
                            Nom complet
                        </label>
                        <input class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" id="fullname" type="text" name="fullname" placeholder="Entrez votre nom complet" required>
                    </div>
    
                    <div class="mb-5">
                        <label class="block text-sm font-medium text-gray-900" for="email" data-parsley-type="email" data-parsley-trigger="keyup">
                            E-mail
                        </label>
                        <input class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" id="email" type="email" name="email" placeholder="Entrez votre email" required>
                    </div>
    
                    <div class="mb-5">
                        <label class="block text-sm font-medium text-gray-900" for="password" data-parsley-minlength="6" data-parsley-trigger="keyup">
                            Mot de passe
                        </label>
                        <input class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" id="password" type="password" name="password" placeholder="Entrez votre mot de passe" required>
                    </div>
    
                    <div class="flex items-center justify-between">
                        <button class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center w-full" type="submit">
                            Créer un compte
                        </button>
                    </div>
                    <div class="mt-6 text-center">
                        <a href="/login" class="text-blue-600 hover:underline">Vous avez déjà un compte? Connectez-vous</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
<script>
    // Initialiser la validation Parsley
    $('#register-form').parsley();
</script>
